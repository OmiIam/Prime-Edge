# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production-min-32-chars

# Server Configuration
PORT=5173
NODE_ENV=development

# Mock Bank API Configuration
MOCK_BANK_DELAY_MS=2000

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGINS="http://localhost:3000,http://localhost:5173,https://www.primeedgefinancebank.com"

# Production Bank API Configuration (replace mock)
BANK_API_URL=""
BANK_API_KEY=""
BANK_API_SECRET=""

# BullMQ/Redis Configuration (for production queue)
REDIS_URL=""
QUEUE_NAME="transfer-processing"

# Monitoring & Logging
SENTRY_DSN=""
LOG_LEVEL="info"

# Security
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# CORS Origins (comma-separated)
ALLOWED_ORIGINS="http://localhost:3000,http://localhost:5173,https://www.primeedgefinancebank.com"

# Maintenance Mode (set to 'true' or '1' to enable)
MAINTENANCE_MODE=false
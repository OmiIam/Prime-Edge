# Database Configuration
DATABASE_URL=postgresql://username:password@host:port/database

# JWT Secret (use a strong random string in production)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Server Configuration
PORT=5173
NODE_ENV=development
CLIENT_URL="http://localhost:5173"

# Frontend URL (for CORS if needed)
FRONTEND_URL=https://your-vercel-app.vercel.app

# Socket.IO Configuration
SOCKET_IO_CORS_ORIGINS="http://localhost:5173,http://localhost:3000,https://www.primeedgefinancebank.com"

# Bank API Configuration (Mock in development)
BANK_API_URL="https://api.bank.com/v1"
BANK_API_KEY="your-bank-api-key"
BANK_API_SECRET="your-bank-api-secret"

# Queue/Background Jobs (Optional - for production)
REDIS_URL="redis://localhost:6379"
QUEUE_URL="redis://localhost:6379"

# Monitoring (Optional)
SENTRY_DSN=""
LOG_LEVEL="info"

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100